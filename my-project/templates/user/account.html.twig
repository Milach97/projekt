{% extends 'user/base.html.twig' %}

{% block additionalStyles %}
    <style>
        .row{
            margin-top: 15px;
            margin-bottom: 15px;
            padding-top: 15px;
            padding-bottom: 15px;
        }
    </style>
{% endblock %}

{% block main %}
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

        <div class="row">
            <div class="col-sm-12 col-md-8 offset-md-2">
                <h4>Moje konto</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <tr>
                            <th>Imię</th>
                            <td colspan="2">{{ user.name ?? '-' }}</td>
                        </tr>
                        <tr>
                            <th>Nazwisko</th>
                            <td colspan="2">{{ user.lastName ?? '-' }}</td>
                        </tr>                    
                        <tr>
                            <th>E-mail</th>
                            <td colspan="2">{{ user.email ?? '-' }}</td>
                        </tr>                    
                        <tr>
                            <th>Nr telefonu</th>
                            <td colspan="2">{{ user.phoneNumber ?? '-' }}</td>
                        </tr>
                        <tr>
                            <th>Hasło</th>
                            <td colspan="2">
                                <a class="btn btn-sm btn-outline-secondary" href="{{ path('user_account_passwordChange') }}">
                                    <span data-feather="edit-3" class="align-text-bottom"></span>
                                    Zmień
                                </a>
                            </td>
                        </tr>
                    </table>
                </div>

            </div>
        </div>

    </main>
{% endblock %}
